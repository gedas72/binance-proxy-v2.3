{
  "version": 2,
  "functions": {
    "api/*.js": {
      "runtime": "nodejs22.x",
      "memory": 128,
      "maxDuration": 10
    }
  },
  "regions": [
    "fra1"
  ],
  "rewrites": [
    {
      "source": "/api/ticker24h",
      "destination": "/api/binance?endpoint=ticker/24hr"
    },
    {
      "source": "/api/klines",
      "destination": "/api/binance?endpoint=klines"
    },
    {
      "source": "/api/exchangeInfo",
      "destination": "/api/binance?endpoint=exchangeInfo"
    },
    {
      "source": "/api/prices",
      "destination": "/api/binance?endpoint=ticker/price"
    },
    {
      "source": "/api/ping",
      "destination": "/api/binance?endpoint=ping"
    },
    {
      "source": "/api/fundingRate",
      "destination": "/api/binance?endpoint=fapi/v1/fundingRate"
    },
    {
      "source": "/api/openInterest",
      "destination": "/api/binance?endpoint=futures/data/openInterestHist"
    }
  ]
}
